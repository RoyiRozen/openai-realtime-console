{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "dist/client",
  "installCommand": "npm install && cd api && pip install --no-cache-dir -r requirements.txt",
  "builds": [
    { "src": "api/vercel.py", "use": "@vercel/python@3.1.0" },
    { "src": "package.json", "use": "@vercel/static-build" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/vercel.py" },
    { "src": "/(.*\\.(js|css|ico|png|jpg|svg|json))", "dest": "/$1" },
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/index.html" }
  ],
  "env": {
    "PYTHON_VERSION": "3.9",
    "NODE_ENV": "production"
  }
} 